@model BP.Data.Match
@using BP.Data

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PlayedAtHome" /> Home Fixture
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OpositionID" class="control-label">Opposition</label>
                <select asp-for="OpositionID" class="form-control" asp-items="ViewBag.OpositionID"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition" class="control-label"></label>
                <select asp-for="Competition" class="form-control" asp-items="Html.GetEnumSelectList<Competition>()"></select>
                <span asp-validation-for="Competition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
