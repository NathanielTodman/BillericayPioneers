@model IEnumerable<BP.Data.Scoring>
@{
    ViewData["Title"] = "Index";
}
<h2>Manage scoring for positions</h2>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Position">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Position">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Position">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
